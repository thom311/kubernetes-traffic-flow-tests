apiVersion: v1
kind: Pod
metadata:
  namespace: {{ name_space }}
  name: "{{ pod_name }}"
  labels:
    tft-tests: "{{ index }}"
    tft-port: "{{ port }}"
  annotations:
    k8s.v1.cni.cncf.io/networks: {{ secondary_network_nad }}
spec:
  nodeSelector:
    kubernetes.io/hostname: "{{ node_name }}"
  containers:
  - name: "{{ pod_name }}"
    image: {{ test_image }}
    command: {{ command }}
    args: {{ args }}
    imagePullPolicy: {{ image_pull_policy }}
    securityContext:
      privileged: {{ privileged_pod }}
